// See https://aka.ms/new-console-template for more information

using System;

public class MainClass
{
    public static void Main()
    {
        // Declaramos una variable para almacenar el número actual
        int n = 1;

        // Iteramos sobre los números del 1 al 1000
        while (n <= 1000)
        {
            // Comprobamos si el número es divisible entre 3
            if (n % 3 == 0)
            {
                // Imprimimos el mensaje personalizado con el número divisible
                Console.WriteLine($"Divisor de Omar Orlandini {n / 3}: {n}");
            }

            // Incrementamos el contador
            n++;
        }
    }
}
